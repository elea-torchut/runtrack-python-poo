class Animal:
    def __init__(self, age=0, prenom=''):
        
        self.age = age
        self.prenom = prenom
        print("L'age de l'animal", self.age, "ans")
        

    def viellir(self):
        self.age = self.age + 1
        print("L'age de l'animal", self.age, "ans")

    def nommer(self):
        self.prenom = input("Veillez entrer le nom de l'animal :")
        print("L'animal se nomme", self.prenom)

animal = Animal()


animal.viellir()
animal.nommer()